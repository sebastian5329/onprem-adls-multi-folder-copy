{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "factoryName": {
            "type": "string",
            "metadata": "Data Factory name",
            "defaultValue": "cloud-dev-adf-fs"
        },
        "ls_filesym_password": {
            "type": "secureString",
            "metadata": "Secure string for 'password' of 'ls_filesym'"
        },
        "ls_sqlserver_password": {
            "type": "secureString",
            "metadata": "Secure string for 'password' of 'ls_sqlserver'"
        },
        "ls_adlgen2_accountKey": {
            "type": "secureString",
            "metadata": "Secure string for 'accountKey' of 'ls_adlgen2'"
        },
        "ls_filesym_properties_typeProperties_host": {
            "type": "string",
            "defaultValue": "G:\\global"
        },
        "ls_filesym_properties_typeProperties_userId": {
            "type": "string",
            "defaultValue": "sebastian"
        },
        "ls_sqlserver_properties_typeProperties_server": {
            "type": "string",
            "defaultValue": "windows02vm"
        },
        "ls_sqlserver_properties_typeProperties_database": {
            "type": "string",
            "defaultValue": "devdb"
        },
        "ls_sqlserver_properties_typeProperties_userName": {
            "type": "string",
            "defaultValue": "sebastian"
        },
        "ls_adlgen2_properties_typeProperties_url": {
            "type": "string",
            "defaultValue": "https://clouddevadl.dfs.core.windows.net/"
        },
        "containerUri": {
            "type": "string",
            "metadata": "URI to storage account containing linked ARM templates"
        },
        "containerSasToken": {
            "type": "string",
            "metadata": "Sas token to storage account containing linked ARM templates"
        }
    },
    "variables": {
        "factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
    },
    "resources": [
        {
            "name": "cloud-dev-adf-fs_ArmTemplate_0",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2024-03-01",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "factoryName": {
                        "value": "[parameters('factoryName')]"
                    },
                    "ls_filesym_password": {
                        "value": "[parameters('ls_filesym_password')]"
                    },
                    "ls_sqlserver_password": {
                        "value": "[parameters('ls_sqlserver_password')]"
                    },
                    "ls_adlgen2_accountKey": {
                        "value": "[parameters('ls_adlgen2_accountKey')]"
                    },
                    "ls_filesym_properties_typeProperties_host": {
                        "value": "[parameters('ls_filesym_properties_typeProperties_host')]"
                    },
                    "ls_filesym_properties_typeProperties_userId": {
                        "value": "[parameters('ls_filesym_properties_typeProperties_userId')]"
                    },
                    "ls_sqlserver_properties_typeProperties_server": {
                        "value": "[parameters('ls_sqlserver_properties_typeProperties_server')]"
                    },
                    "ls_sqlserver_properties_typeProperties_database": {
                        "value": "[parameters('ls_sqlserver_properties_typeProperties_database')]"
                    },
                    "ls_sqlserver_properties_typeProperties_userName": {
                        "value": "[parameters('ls_sqlserver_properties_typeProperties_userName')]"
                    },
                    "ls_adlgen2_properties_typeProperties_url": {
                        "value": "[parameters('ls_adlgen2_properties_typeProperties_url')]"
                    }
                }
            },
            "dependsOn": []
        }
    ]
}